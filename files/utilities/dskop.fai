	CPOPJ,,[ASCIZ/Working quota                  /]
	CPOPJ,,[ASCIZ/Permanent quota                /]
	CPOPJ,,[ASCIZ/Current space allocation       /]
	CPOPJ,,[ASCIZ/Pointer to name string         /]
	CPOPJ,,[ASCIZ/Pointer to password string     /]
	CPOPJ,,[ASCIZ/Capabilities                   /]
