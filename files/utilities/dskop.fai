FDBFMT:	CPOPJ,,[ASCIZ/FDB Header          /]
	PFBCTL,,[ASCIZ/.FBCTL              /]	;TMP!PERM!NON-EX!DELETED!NXF!LONG!DIREC
	PNFB,,[ASCIZ/FDB of next type    /]
	padr,,[ASCIZ/Index Blk Addr      /]
	pprot,,[ASCIZ/File Protection     /]
