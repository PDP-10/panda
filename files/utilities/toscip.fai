cmderr:	movei 1,.fhslf
	geter
	hrrz 2,2
	caie 2,iox4		;eof?
	caie 2,comnx9		;eof?
	 jrst eofok		;yes
	hrroi 1,[asciz/Error in COMND parsing:
/]
	call conerr
