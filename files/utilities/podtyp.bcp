and ShowError(Code,Message) be
{ let InputACs := vec 16
  let OutputACs := vec 16

  WriteS(NEWLINE)
  InputACs|1 := OUTPUT
  lh InputACs|2 := #400000 //current process handle
  rh InputACs|2 := Code
  lh InputACs|3 := 0
  rh InputACs|3 := 0
  InputACs|4 := 0
  if 3 ne JSYS(jsERSTR,InputACs,OutputACs)
