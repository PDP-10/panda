      && q->Preg != b->Preg
      && q->Preg != p->Preg
      && q->Preg != p->Pindex) {
	switch (q->Pop) {
	case P_FADR:	case P_FSBR:	case P_FDVR:	case P_FMPR:
	case P_ADD:	case P_IMUL:	case P_SUB:	case P_MOVE:
	case P_MOVN:	case P_SETZ:	case P_SETO:	case P_FLTR:
