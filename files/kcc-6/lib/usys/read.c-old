    if (!(to.to_arg.wd[0] & _TOFLG_8BIT)	/* If ASCII mode, */
      && (to.to_arg.wd[0] & _TOFLG_BREAK))	/* Check for ^Z */
	uf->uf_eof = -1;			/* Set EOF if so */
    return 1 + (cnt - to.to_arg.io.cnt);
