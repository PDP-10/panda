#include <sys/types.h>
#include <sys/uio.h>				/* define iovec */

int writev(fd, iov, iovcnt)
int fd;
struct iovec *iov;
int iovcnt;
{
    int i, sent, total;
    extern int write();

    for (total = i = 0; i < iovcnt; i++, total += sent) {
	sent = write(fd, (char *) iov[i].iov_base, iov[i].iov_len);
	if (sent < iov[i].iov_len)
	    return -1;
    }
    return total;
}
