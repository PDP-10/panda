	SETOM	INJFN(FIL)		;MARK NO FILE HERE
	MOVNI	T1,-1(FIL)		;T1/ TRASH,,?xOTHER FILE NUMBER
	SKIPGE	INJFN(T1)		;IS THE OTHER FILE GONE TOO?
	TXOA	F,F.EOF			;YES, MARK DONE AND SING. RET
	AOS	(P)			;NO, SKIP RET
	RET

